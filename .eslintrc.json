{
  "extends": ["airbnb-base", "airbnb-typescript/base", "prettier"],
  "ignorePatterns": ["node_modules/", "dist/", "*.json", "*.md"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "comma-dangle": "error",
    "import/extensions": "off",
    "max-len": "off",
    "import/no-extraneous-dependencies": "off"
  }
}
